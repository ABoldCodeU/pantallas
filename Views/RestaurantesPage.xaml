<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AxitHome.Views.Pages.RestaurantesPage">

    <CollectionView ItemsSource="{Binding Restaurantes}" SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Image Source="{Binding Image}" Aspect="AspectFill" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
                    <Label Text="{Binding Name}" VerticalOptions="End" HorizontalOptions="Center" BackgroundColor="Black" Opacity="0.5" TextColor="White" FontSize="Large" Padding="5" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
